{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dependencies",
      "type": "shell",
      "command": [
        "flutter pub get"
      ],
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "showReuseMessage": false,
        "panel": "shared",
        "close": true,
        "focus": true,
      },
      "problemMatcher": []
    },
    {
      "label": "Format",
      "type": "shell",
      "command": [
        "dart format --fix -l 120"
      ],
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Codegeneration",
      "type": "shell",
      "dependsOn": [
        "Dependencies"
      ],
      "command": [
        "dart run build_runner build --delete-conflicting-outputs"
      ],
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "showReuseMessage": false,
        "panel": "shared",
        "close": true,
        "focus": true,
      },
      "problemMatcher": []
    },
    {
      "label": "Codegeneration packages",
      "type": "shell",
      "dependsOn": [
        "Dependencies"
      ],
      "command": [
        "cd packages/model/auth_model && fvm dart run build_runner build --delete-conflicting-outputs --release"
      ],
      "group": {
        "kind": "none",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "revealProblems": "onProblem",
        "panel": "shared",
        "close": true,
        "focus": true,
      },
      "problemMatcher": []
    },
    {
      "label": "Clear build",
      "type": "shell",
      "command": "make clear-client",
      "windows": {
        "command": "powershell.exe",
        "args": [
          "-NoProfile",
          "-ExecutionPolicy",
          "Bypass",
          "-Command",
          "Remove-Item -Path '${workspaceFolder}\\build' -Recurse -Force -ErrorAction Ignore"
        ]
        /* "options": {
          "shell": {
            "executable": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
          }
        } */
      },
      "linux": {
        "command": "rm -rf",
        "args": [
          "${workspaceFolder}/build"
        ]
      },
      "osx": {
        "command": "rm -rf",
        "args": [
          "${workspaceFolder}/build"
        ]
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "App >> Firebase #dev",
      "type": "shell",
      "command": "flutter build web --release && firebase hosting:channel:deploy dev",
      "options": {
        "cwd": "${workspaceFolder}",
        "args": [
          "-d",
          "chrome",
          "--wasm",
          "--dart-define-from-file=config/development.env",
          "--dart-define-from-file=config/keys.env",
        ],
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "UI Kit >> Firebase",
      "type": "shell",
      "command": "flutter build web --release && firebase hosting:channel:deploy ui-kit",
      "options": {
        "cwd": "${workspaceFolder}/packages/ui/example"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}